<form action="/adicionar-aluno" method="post">
  <div class="form-group">
    <label for="matricula">Matrícula</label>
    <input type="text" class="form-control" id="matricula" name="matricula" placeholder="Insira a matrícula">
  </div>
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" class="form-control" id="nome" name="nome" placeholder="Insira o nome">
  </div>
  <div class="form-group">
    <label for="cpf">CPF</label>
    <input type="text" class="form-control" id="cpf" name="cpf" placeholder="Insira o CPF">
  </div>
  <div class="form-group">
    <label for="rg">RG</label>
    <input type="text" class="form-control" id="rg" name="rg" placeholder="Insira o RG">
  </div>
  <button type="submit" class="btn btn-primary">Enviar</button>
</form>